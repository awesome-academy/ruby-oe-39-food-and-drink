<div class="rating-box mt-3">
  <%= form_with model: rating, url: product_ratings_path(product.id) do |f| %>
    <div class="main-rating">
      <div class="ratings mb-3">
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
      </div>
      <div class="ml-3 rating-value-display"><span id="rating-value-display">0</span>/5</div>
    </div>
    <%= f.hidden_field :product_id, value: product.id %>
    <%= f.hidden_field :rating, id: "rating-value" %>
    <%= f.text_field :content, class: "textarea" %>
    <%= f.submit t("order.submit"), class: "btn btn-success btn-xs glyphicon glyphicon-ok" %>
    <%= link_to t("ratings.index"), product_ratings_path(product.id), class: "btn btn-info btn-xs glyphicon glyphicon-usd" %>
  <% end %>
</div>
<%= javascript_pack_tag "rating" %>
